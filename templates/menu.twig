{% macro buildMenu(menu) %}
    <div class="documented-sub-menu">
        {% for submenu in menu.submenus %}
            <div class="sub-menu">
                <div class="sub-menu-title {% if submenu.current %}menu-item-current{% endif %}">
                    <span class="glyphicon glyphicon-chevron-down menu-marker"></span>
                    {% if submenu.hasIndex %}
                        <a href="{{ submenu.path }}">{{ submenu.title }}</a>
                    {% else %}
                        <span>{{ submenu.title }}</span>
                    {% endif %}
                </div>
                {{ buildMenu(submenu) }}
            </div>
        {% endfor %}

        {% for item in menu.items %}
            <div class="menu-item {% if item.current %}menu-item-current{% endif %}">
                <a href="{{ item.path }}">{{ item.title }}</a>
            </div>
        {% endfor %}
    </div>
{% endmacro %}

<div class="documented-menu-wrapper">
    {{ buildMenu(menu) }}
</div>

<script>
    var currentDocumentId = "{{ document.id }}";
</script>
